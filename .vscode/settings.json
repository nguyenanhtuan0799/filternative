{
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "[javascript]": {
        "editor.formatOnSave": true
    },
    "[typescriptreact]": {
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": true
        }
    },
    "files.associations": {
        "*.json": "jsonc"
    },
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.fixAll.eslint": true
    },
    "editor.tabSize": 2,
    "git.ignoreLimitWarning": true,
    "cSpell.words": [
        "formik",
        "immer",
        "shopify",
        "wcandillon"
    ]
}
